<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sishuok.architecture1.customermgr.dao.interfances.ICustomerDao">

	<insert id="create" parameterType="CM">
		insert into tbl_customer
		(customerId,pwd,showName,trueName,registerTime)
		VALUES(#{customerId},#{pwd},#{showName},#{trueName},#{registerTime});
	</insert>
	
	<update id="update" parameterType="CM">
		update tbl_customer
		<trim prefix="set" suffixOverrides=",">
			<if test="customerId != null">customerId = #{customerId},</if>
			<if test="pwd != null">pwd = #{pwd},</if>
			<if test="showName != null">showName = #{showName},</if>
			<if test="trueName != null">trueName = #{trueName},</if>
			<if test="registerTime != null">registerTime = #{registerTime},</if>
		</trim>
		where uuid = #{uuid};
	</update>
	
	<delete id="delete" parameterType="int">
		delete from tbl_customer where uuid = #{uuid};
	</delete>
	
	<select id="getByUuid" resultType="CM" parameterType="int">
		select * from tbl_customer where uuid = #{uuid};
	</select>
	
	<select id="getByCondition" resultType="CM" parameterType="int">
		select * from tbl_customer
		<where>
			<if test="uuid!=null &amp;&amp; uuid > 0">
				and uuid = #{uuid}
			</if>
			<if test="customerId!=null &amp;&amp; customerId!=''">
				and customerId = #{customerId}
			</if>
			<if test="showName!=null &amp;&amp; showName!=''">
				and showName like "%" #{showName} "%"
			</if>
		</where>
	</select>
	<select id="getAll" resultType="CM">
		select * from tbl_customer
	</select>
	<select id="getByCustomerId" resultType="CM" parameterType="String">
		select * from tbl_customer where customerId = #{customerId};
	</select>
</mapper>